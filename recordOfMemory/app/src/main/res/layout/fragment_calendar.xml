<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="24dp"
    >

    <TextView
        android:id="@+id/calendar_year_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/noto_sans_semi_bold"
        tools:text="2022년 12월"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="33dp"
        />

    <LinearLayout
        android:id="@+id/calendar_dot_month"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendar_year_month"
        >

        <ImageView
            android:id="@+id/calendar_dot_past_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/calendar_dot_past_next_month"/>

        <ImageView
            android:id="@+id/calendar_dot_current_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:src="@drawable/calendar_dot_current_month"/>

        <ImageView
            android:id="@+id/calendar_dot_next_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/calendar_dot_past_next_month"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/calendar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:paddingVertical="22dp"
        android:paddingHorizontal="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendar_dot_month"
        android:orientation="vertical"
        android:background="@drawable/calendar_box_background"
        >

        <include
            android:id="@+id/calendar_week"
            layout="@layout/calendar_week_text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="29dp"/>

        <com.kizitonwose.calendar.view.CalendarView
            android:id="@+id/calendar_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:cv_dayViewResource="@layout/calendar_day_container"/>

    </LinearLayout>
    <TextView
        android:id="@+id/calendar_tv_my_first_diary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/noto_sans_semi_bold"
        android:text="@string/calendar_tv_my_first_diary"
        android:textColor="@color/green4"
        app:layout_constraintTop_toBottomOf="@id/calendar_container"
        android:layout_marginTop="42dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/calendar_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/calendar_tv_my_first_diary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>