<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="5dp"
    >

    <ImageView
        android:id="@+id/big_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="312dp"
        android:maxHeight="632dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        tools:src="@drawable/ex_img"
        android:background="@drawable/daybook_image_background"
        android:padding="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/big_image_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/icn_btn_x"
        app:layout_constraintEnd_toEndOf="@id/big_image"
        app:layout_constraintTop_toTopOf="@id/big_image" />

</androidx.constraintlayout.widget.ConstraintLayout>