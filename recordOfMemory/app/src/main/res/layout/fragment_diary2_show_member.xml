<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/diary2_show_member_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icn_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/diary2_show_member_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="33dp"
        android:text="@string/diary2_show_member_tv_title"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/noto_sans_semi_bold"
        android:includeFontPadding="false"/>
    <LinearLayout
        android:id="@+id/diary2_show_member_linear_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/diary2_show_member_tv_title"
        android:background="@drawable/item_diary2_show_member_box"
        android:paddingHorizontal="25dp"
        android:paddingVertical="10dp"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/diary2_show_member_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/diary2_show_member_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/diary2_background_empty_content"
        android:text="@string/diary2_invite"
        android:textSize="11sp"
        android:fontFamily="@font/noto_sans_regular"
        android:gravity="center"
        android:textColor="@color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>