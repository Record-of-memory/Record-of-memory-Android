<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="165dp"
    android:layout_gravity="center"
    android:background="@drawable/box_custom_dialog"
    android:clickable="true"
    android:elevation="5dp">

    <TextView
        android:id="@+id/mypage_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/noto_sans_semi_bold"
        android:text="정말 우리기억을 탈퇴하시겠어요?"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mypage_dialog_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/noto_sans_regular"
        android:text="모든 내용이 영구적으로 삭제됩니다."
        android:textColor="#8E8888"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mypage_dialog_title" />


    <TextView
        android:id="@+id/mypage_btn_cancel"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/box_custom_dialog_gray_button"
        android:fontFamily="@font/noto_sans_regular"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="취소하기"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@id/mypage_btn_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mypage_dialog_sub_title" />

    <!--       foreground ~ : 클릭했을 때 효과를 준다-->
    <TextView
        android:id="@+id/mypage_btn_delete"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/box_custom_dialog_red_button"
        android:fontFamily="@font/noto_sans_regular"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="탈퇴하기"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/mypage_btn_cancel"
        app:layout_constraintTop_toBottomOf="@id/mypage_dialog_sub_title" />


</androidx.constraintlayout.widget.ConstraintLayout>